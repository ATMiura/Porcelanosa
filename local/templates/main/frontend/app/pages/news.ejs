                            { date: '28.03', img: './images/content/slider-events-img-2.jpg', title: 'Сочные новинки от Noken 2021', },

                            { date: '28.03', img: './images/content/slider-events-img-1.jpg', title: 'Виртуальная экскурсия с Porselanosa Grupo', },
                            { date: '28.03', img: './images/content/slider-events-img-2.jpg', title: 'Про душевой дизайн с Radaway', },
                            { date: '28.03', img: './images/content/slider-events-img-1.jpg', title: 'Сочные новинки от Noken 2021', },
                            { date: '28.03', img: './images/content/slider-events-img-2.jpg', title: 'Сочные новинки от Noken 2021', },

                            { date: '28.03', img: './images/content/slider-events-img-1.jpg', title: 'Виртуальная экскурсия с Porselanosa Grupo', },
                            { date: '28.03', img: './images/content/slider-events-img-2.jpg', title: 'Про душевой дизайн с Radaway', },
                            { date: '28.03', img: './images/content/slider-events-img-1.jpg', title: 'Сочные новинки от Noken 2021', },
                            { date: '28.03', img: './images/content/slider-events-img-2.jpg', title: 'Сочные новинки от Noken 2021', },
                        ]

                    listEvents.forEach(function (item) { %>
                        <div class="events-card">
                            <a href="#" class="events-card__link">
                                <div class="events-card-content">
                                    <picture class="events-card__picture">
                                        <img src="<%= item.img %>" alt="" class="events-card__image">
                                    </picture>
                                    <div class="events-card__label">
                                        <div class="events-card-date">
                                            <div class="events-card-date__col">11</div>
                                            <div class="events-card-date__col">
                                                <span>декабря</span>
                                                <span>2020</span>
                                            </div>
                                        </div>
                                        <div class="events-card-info">
                                            <div class="events-card__title"><%= item.title %></div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    <% }) %>
                </div>
                <%- require("../components/elements/pagination.ejs")() %>
            </div>
        </div>
    </div>

<%- require("../layouts/footer.ejs")() %>