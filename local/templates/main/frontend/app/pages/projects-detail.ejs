                                    <div class="slider__point" data-card-id="introTooltip-slide-0-tooltip-5" style="top: 31.1%; left: 61.7%;"></div>
                                    <div class="slider__point" data-card-id="introTooltip-slide-0-tooltip-6" style="top: 49.7%; left: 93.5%;"></div>

                                </div>

                                <div class="slider-point-card" data-card="">
