                                                        <picture class="catalog-item__picture">
                                                            <img src="./images/content/catalog-item-img-1.jpg" alt="" class="catalog-item__img">
                                                        </picture>
                                                    </a>
                                                </div>
                                                <div class="catalog-item__body">
                                                    <a href="#" class="catalog-item__link">
                                                        <div class="catalog-item__name">Плитка Mirage-Image</div>
                                                    </a>
                                                    <div class="price">
                                                        <div class="price__value">400 руб. / м<sup>2</sup></div>
                                                    </div>
                                                </div>
                                                <div class="catalog-item__foot">
                                                    <a href="#" class="btn btn--border-gold">Добавить в корзину</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                    </div>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-wrapper">
                        <div class="swiper-button swiper-button-prev">
                            <svg class="i-icon">
                                <use xlink:href="#i-slider-arrow-left"></use>
                            </svg>
                        </div>
                        <div class="swiper-button swiper-button-next">
                            <svg class="i-icon">
                                <use xlink:href="#i-slider-arrow-right"></use>
                            </svg>
