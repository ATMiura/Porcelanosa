<% const data = {
    title: 'Жемчужная россыпь',
    'flowContainerClass' : 'flow-container--main'
} %>
<%- require("../layouts/header.ejs")(data) %>

<%
    const listNew = [

        { name: 'Плитка Mirage-Image', img: 'catalog-item-img-1.jpg', price: '400 руб.',     sale: false },
        { name: 'Керамогранит Austin', img: 'catalog-item-img-2.jpg', price: '48 000 руб.',  sale: false },
        { name: 'Керамогранит Austin', img: 'catalog-item-img-3.jpg', price: '48 000 руб.',  sale: false },
        { name: 'Плитка Mirage-Image', img: 'catalog-item-img-4.jpg', price: '765 899 руб.', sale: false },
