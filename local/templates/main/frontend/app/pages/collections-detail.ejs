<% const data = {
    title: 'Жемчужная россыпь',
    'flowContainerClass' : 'flow-container--main'
} %>
<%- require("../layouts/header.ejs")(data) %>

    <section class="section-head">
        <div class="container">
            <%- require('../components/elements/breadcrumbs.ejs')(data)%>
            <div class="section-head__title">
                <h1 class="h1">Жемчужная россыпь</h1>
            </div>
        </div>
    </section>

    <section class="section section-collections-detail">
        <div class="container">
            <div class="slider-detail" id="sliderDetail">
                <div class="swiper-container">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide slider-detail__slide" data-card-inner style="background: url('./images/content/collections-slider-image.jpg')">
                            <div class="slider__points">

                                <div class="slider__point" data-id="introTooltip-slide-0-tooltip-0" style="top: 20%;   left: 29.7%;"></div>
                                <div class="slider__point" data-id="introTooltip-slide-0-tooltip-2" style="top: 19.5%; left: 10.8%;"></div>
                                <div class="slider__point" data-id="introTooltip-slide-0-tooltip-3" style="top: 85.5%; left: 11.4%;"></div>
                                <div class="slider__point" data-id="introTooltip-slide-0-tooltip-4" style="top: 67.9%; left: 59.7%;"></div>
                                <div class="slider__point" data-id="introTooltip-slide-0-tooltip-5" style="top: 31.1%; left: 61.7%;"></div>
                                <div class="slider__point" data-id="introTooltip-slide-0-tooltip-6" style="top: 49.7%; left: 93.5%;"></div>

                            </div>
                        </div>
                    </div>
                    <div class="swiper-pagination"></div>
                    <div class="swiper-button-wrapper">
                        <div class="swiper-button swiper-button-prev">
                            <svg class="i-icon">
                                <use xlink:href="#i-slider-arrow-left"></use>
                            </svg>
                        </div>
                        <div class="swiper-button swiper-button-next">
                            <svg class="i-icon">
                                <use xlink:href="#i-slider-arrow-right"></use>
                            </svg>
                        </div>
                    </div>
                </div>
                <div class="slider-point-card" data-card>
                    <div class="catalog__item">
                        <div class="catalog-item always-show" data-catalog-list-item="">
                            <div class="catalog-item__inner">
                                <div class="catalog-item__head">
                                    <div class="slider-point-card__close" data-popover-close></div>
                                    <a href="#" class="catalog-item__link-picture">
                                        <picture class="catalog-item__picture">
                                            <img src="./images/content/catalog-item-img-1.jpg" alt="" class="catalog-item__img">
                                        </picture>
                                    </a>
                                </div>
                                <div class="catalog-item__body">
                                    <a href="#" class="catalog-item__link">
                                        <div class="catalog-item__name">Плитка Mirage-Image</div>
                                    </a>
                                    <div class="price">
                                        <div class="price__value">400 руб. / м<sup>2</sup></div>
                                    </div>
                                </div>
                                <div class="catalog-item__foot">
                                    <a href="#" class="btn btn--border-gold">Добавить в корзину</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="collections-description">
                <div class="editor">
                    <p><b>KRION®</b>, минеральный композит нового поколения. <br> Минеральный композит KRION®, теплый и мягкий на ощупь, напоминает натуральный камень и позволяет создавать конструкции без швов с выдержанной в едином стиле поверхностью. </p>
                    <p>Его состав обладает долговечностью и высокой устойчивостью к воздействию природных явлений, нагрузке, ударам и образованию пятен. Благодаря своей устойчивости к нагреванию и огнеупорным свойствам, даже при контакте с источниками тепла этот материал сохраняет свой внешний вид.</p>
                </div>
            </div>
        </div>
    </section>

    <%- require("../section/section-advants.ejs")() %>

    <section class="section section-collections-products">
        <div class="container">
            <div class="section__head wow fadeInDown" data-wow-delay="0.5s">
                <h2 class="h2">товары коллекции</h2>
            </div>
            <div class="grid">
                <div class="grid__col">
                    <div class="catalog">
                        <div class="catalog__list">
                            <% const list=[
                                { item: '4', name: 'Плитка Mirage-Image', img: 'catalog-item-img-1.jpg', price: '400 руб.',                             sale: false, },
                                { item: '4', name: 'Керамогранит Austin', img: 'catalog-item-img-2.jpg', price: '48 000 руб.',                          sale: true, },
                                { item: '4', name: 'Керамогранит Austin', img: 'catalog-item-img-3.jpg', price: '48 000 руб.',                          sale: false, },

                                { item: '4', name: 'Отдельно стоящая ванна Manhattan Par-Ker', img: 'catalog-item-img-4.jpg', price: '765 899 руб.',    sale: false, },
                                { item: '4', name: 'Плитка Mirage-Image', img: 'catalog-item-img-1.jpg', price: '400 руб.',                             sale: false, },
                                { item: '4', name: 'Керамогранит Austin', img: 'catalog-item-img-2.jpg', price: '48 000 руб.',                          sale: false, },

                                { item: '4', name: 'Керамогранит Austin', img: 'catalog-item-img-2.jpg', price: '48 000 руб.',                          sale: false, },
                            ] %>
                            <% list.forEach(function (item) { %>
                                <div class="catalog__item <%= item.item ? 'catalog__item--' + item.item : '' %>">
                                    <%- require("../components/catalog/catalog-item.ejs")({ name: item.name, img: item.img, price: item.price, sale: item.sale }) %>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>

                <div class="grid__col">
                    <%- require("../components/elements/gallery.ejs")()%>
                </div>
            </div>
        </div>
    </section>



    <section class="section section-collections-seo">
        <div class="container">
            <div class="grid">
                <div class="grid__col grid__col--4">
                    <div class="collections-seo__text">
                        <div class="editor">
                            <p><b>KRION®</b>, минеральный композит нового поколения. <br> Минеральный композит KRION®, теплый и мягкий на ощупь, напоминает натуральный камень и позволяет создавать конструкции без швов с выдержанной в едином стиле поверхностью.</p>
                        </div>
                    </div>
                </div>
                <div class="grid__col grid__col--8">
                    <div class="collections-seo__video">
                       <div class="video-wrapper">
                            <div class="video" data-video>
                                <a class="video__link" href="./video/video.mp4" data-video-link="">
                                    <picture>
                                        <img class="video__media" src="./images/content/video-image.jpg" alt="" data-video-media="">
                                    </picture>
                                </a>
                                <button class="video__button" type="button" aria-label="Запустить видео" data-video-button="">
                                    <img src="./images/svg/video-play.svg" alt="">
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

<%- require("../layouts/footer.ejs")() %>