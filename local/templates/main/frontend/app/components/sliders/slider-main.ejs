<div id="sliderMain" class="slider-main swiper-slider">
    <div class="slider-main__container swiper-container">
        <div class="slider-main__wrapper swiper-wrapper">
            <% const list = [
                {}, {}, {}, {}, {}, {}, {}, {}, {}, {},
            ] %>
            <% list.forEach(function (item) { %>
                <div class="slider-main__slide swiper-slide">
                    <a href="#" class="slider-main__link">
                        <picture class="slider-main__picture">
                            <img src="./images/content/slider-main.jpg" alt="" class="slider-main__img">
                        </picture>
                        <div class="slider-main__content">
                            <div class="slider-main__status">New</div>
                            <h1 class="slider-main__title h1">Плитка <br> MIRAGE-IMAGE уже на складе!</h1>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
        <div class="swiper-pagination"></div>
    </div>
    <div class="swiper-button-wrapper">
        <div class="swiper-button swiper-button-prev">
            <svg class="i-icon">
                <use xlink:href="#i-slider-arrow-left"></use>
            </svg>
        </div>
        <div class="swiper-button swiper-button-next">
            <svg class="i-icon">
                <use xlink:href="#i-slider-arrow-right"></use>
            </svg>
        </div>
    </div>
</div>