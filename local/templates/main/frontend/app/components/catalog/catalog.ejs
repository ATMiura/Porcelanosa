                                    <img src="./images/content/<%= item.img %>" alt="" class="catalog-item__img">
                                </picture>
                            </a>
                        </div>
                        <div class="catalog-item__body">
                            <a href="#" class="catalog-item__link">
                                <div class="catalog-item__name"><%= item.name %></div>
                            </a>
                            <div class="catalog-item__price">
                                <%- require("../elements/price.ejs")({ sale: false, priceValue: item.price, }) %>
                            </div>
                            <div class="catalog-item__quantity"><%= item.quantity %> товаров</div>
